{
  "name": "oauth2-api",
  "version": "1.0.0",
  "description": "oauth2 project for an ES6 RESTful Express API",
  "main": "dist",
  "scripts": {
    "migrate": "npm run clean && npm run build && sequelize db:migrate && sequelize db:seed:all",
    "dev": "npm install && npm run migrate && webpack --watch",
    "clean": "rm -rf dist && rm -rf build",
    "build": "babel src -D -d dist",
    "start": "NODE_ENV=production node dist",
    "lint": "eslint src",
    "unit-test": "jest --silent --coverage --forceExit __tests__ --detectOpenHandles"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.13.3",
    "cheerio": "^1.0.0-rc.2",
    "compression": "^1.5.2",
    "datauri": "^1.1.0",
    "dotenv": "^6.0.0",
    "elasticsearch": "^15.1.1",
    "encoding": "^0.1.12",
    "express": "^4.13.3",
    "express-oauth-server": "^2.0.0",
    "express-validation": "^1.0.2",
    "express-winston": "^3.0.1",
    "joi": "^13.4.0",
    "js-base64": "^2.5.1",
    "luxon": "^1.28.1",
    "memory-cache": "^0.2.0",
    "nanoid": "^2.0.1",
    "node-oauth2-server": "^2.4.0",
    "parse-data-url": "^0.2.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "request-context": "^2.0.0",
    "sequelize": "^4.37.10",
    "swagger-jsdoc": "^1.9.7",
    "swagger-ui-express": "^3.0.10",
    "uniqid": "^5.0.3",
    "universal-fetch": "^1.0.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.26.0",
    "eslint": "^3.1.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-jest": "^21.17.0",
    "handlebars": "^4.0.12",
    "jest": "^23.1.0",
    "jest-fetch-mock": "^1.6.5",
    "jest-junit": "^5.0.0",
    "nodemon": "^1.17.5",
    "nodemon-webpack-plugin": "^4.0.3",
    "sequelize-cli": "^4.0.0",
    "shebang-loader": "0.0.1",
    "sinon": "^6.1.4",
    "supertest": "^3.1.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.12.2",
    "webpack-cli": "^3.0.8",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/__tests__/setupJest.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.{js,jsx,mjs}"
    ],
    "transform": {
      "\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "html",
      "json",
      "cobertura"
    ],
    "collectCoverageFrom": [
      "src/service/*.(js)",
      "src/util/*.(js)"
    ],
    "cacheDirectory": "./node_modules/.cache/jest",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules"
    ]
  },
  "jest-junit": {
    "output": "./report/junit.xml"
  }
}
